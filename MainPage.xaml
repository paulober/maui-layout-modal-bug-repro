<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage"
             BackgroundColor="White">

    <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">
        
        <Label Text="MAUI Grid InputTransparent Layout Bug"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"
               Margin="0,0,0,10"/>
        
        <Label Text="Bug: On Android modal pages, InputTransparent='True' on a Grid prevents it from filling the full available space on first render."
               TextColor="Red"
               FontSize="14"
               HorizontalTextAlignment="Center"
               Margin="0,0,0,20"/>
        
        <Label Text="Compare the two modals:"
               FontSize="16"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"/>
        
        <Button Text="ðŸ› Open Modal WITH InputTransparent (BUG)"
                Clicked="OnOpenModalWithBugClicked"
                BackgroundColor="Red"
                TextColor="White"
                FontSize="16"
                Padding="15"/>
                
        <Label Text="â†‘ Should show aqua overlay not filling screen on Android"
               FontSize="12"
               TextColor="Gray"
               HorizontalTextAlignment="Center"
               Margin="0,-15,0,0"/>
        
        <Button Text="âœ… Open Modal WITHOUT InputTransparent (WORKS)"
                Clicked="OnOpenModalWithoutBugClicked"
                BackgroundColor="Green"
                TextColor="White"
                FontSize="16"
                Padding="15"
                Margin="0,20,0,0"/>
                
        <Label Text="â†‘ Should show aqua overlay filling entire screen"
               FontSize="12"
               TextColor="Gray"
               HorizontalTextAlignment="Center"
               Margin="0,-15,0,0"/>
        
        <Label Text="Note: On iOS both work correctly"
               FontSize="12"
               TextColor="Blue"
               FontAttributes="Italic"
               HorizontalTextAlignment="Center"
               Margin="0,20,0,0"/>

    </VerticalStackLayout>

</ContentPage>
